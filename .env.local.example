# Local build environment variables
# Copy this to .env.local and customize for your local builds

# Personal Information
MAINTAINER_NAME="Your Full Name"
MAINTAINER_EMAIL="your.email@domain.com"
VENDOR_NAME="Your Organization"

# Repository Information
DOCKERHUB_USERNAME="yourdockerhubusername"
GITHUB_USERNAME="yourgithubusername"
GITHUB_REPO="docker-comfyui-amd"

# Image Information
IMAGE_VERSION="1.0.0-local"
IMAGE_DESCRIPTION="ComfyUI with AMD ROCm 6.4.4 support - Lightweight container using host ROCm (Custom Build)"

# Technical Configuration
PYTORCH_VERSION="2.7.1"
ROCM_VERSION="6.4"
UBUNTU_VERSION="24.04"

# Build Options
BUILD_PLATFORM="linux/amd64"
BUILD_CACHE="true"
PUSH_AFTER_BUILD="false"

# GPU Configuration
HCC_AMDGPU_TARGET="gfx1030,gfx1031,gfx1032,gfx1100,gfx1101,gfx1102,gfx1200,gfx1201"
PYTORCH_ROCM_ARCH="gfx1030;gfx1031;gfx1032;gfx1100;gfx1101;gfx1102;gfx1200;gfx1201"
HSA_OVERRIDE_GFX_VERSION="10.3.0"
